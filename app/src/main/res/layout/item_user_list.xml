<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_users_picture"
        android:layout_marginEnd="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    
    <TextView
        android:id="@+id/item_users_name"
        tools:text="Vultur Rares"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/item_users_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_users_email"
        tools:text="rares.vultur96@gmail.com"
        android:layout_toEndOf="@id/item_users_picture"
        android:layout_below="@id/item_users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>