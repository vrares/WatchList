<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_pending_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/item_pending_name"
        tools:text="Vultur Rares"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toEndOf="@id/item_pending_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/item_pending_decline"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_remove"
        android:layout_alignParentEnd="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/item_pending_accept"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_check"
        android:layout_toStartOf="@id/item_pending_decline"
        android:layout_marginEnd="5dp"
        android:layout_width="33dp"
        android:layout_height="33dp" />

</RelativeLayout>