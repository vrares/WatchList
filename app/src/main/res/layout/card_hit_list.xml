<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_hit_title"
                android:layout_width="160dp"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="IT"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/card_hit_backdrop"
                android:layout_below="@id/card_hit_title"
                android:layout_width="160dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/example_backdrop"
                android:layout_height="80dp" />

            <ImageView
                android:id="@+id/card_seen_ic"
                android:background="@drawable/btn_seen"
                android:layout_below="@id/card_hit_backdrop"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/card_seen_date"
                android:layout_toEndOf="@id/card_seen_ic"
                android:layout_marginStart="5dp"
                tools:text="7 Aug 2016 05:00"
                android:layout_below="@id/card_hit_backdrop"
                android:layout_width="115dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>



</RelativeLayout>